class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
        long long low = 0;
        long long high = arr.size()-1;
        while(low < high){
            long long mid = low + (high - low)/2;
            if(arr[mid] < arr[mid + 1]){
                low = mid + 1;
            }
            else{
                high = mid;
            }
        }
        return low;
        
    }
};
